    <head>
        <style>
            body {
                   background-color: pink;
            }
            h1 {
                text-align: center;
                color: rgba(52, 100, 4, 0.711)
            }
        
            #isred {
                color: red;
            }

            #isblue {
                color: blue;
            }

            #isgreen {
                color: green;
            }

            #big {
                font-size: 40px;
            }

            #tiny {
                font-size: 10px;
            }

            #center {
                text-align: center;
            }

            #bold {
                font-weight: bold;
            }

            #family {
                font-family: times 'Times New Roman', Times, serif;
            }

            #center {
                text-align: center;
            }

            #orange {
                font-size: 70;
                color: orange;
                font-weight: bold;
            }

                
        
        </style>
    </head>